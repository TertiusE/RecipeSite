extends layout 

block content 
    h1.mainTitle Recipe Book 
    .custom_row
        each recipe in recipes
            .custom_3
                .recipeCard
                    a.recipeLink(href="/recipes/"+recipe._id) #{recipe.name}
                    .desc 
                        p.descText Description
                        p #{recipe.description}
                    p.diff Difficulty
                    progress.progress_width(value=recipe.difficulty min=1 max=10)

                    h4 Ingredients
                    ul 
                        each ingredient in recipe.ingredients
                            li #{ingredient}

                    h4 Steps
                    ol
                        each step in recipe.steps
                            li #{step}
